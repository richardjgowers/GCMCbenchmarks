SimulationType                MonteCarlo
NumberOfCycles                3000000
NumberOfInitializationCycles  3000000
PrintEvery                    100
PrintPropertiesEvery          100
RestartFile                   no

# Restart and crash-recovery
ContinueAfterCrash              no        # Write a binary file (binary restart.dat). 
WriteBinaryRestartFileEvery     100       # The output frequency of the crash-recovery file.

Forcefield                    IRMOF-1_K.Walton_truncated
CutOffVDW                     25.0
ChargeMethod                  None  #CoulombShifted or Ewald
